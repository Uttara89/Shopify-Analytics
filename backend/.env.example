# Example environment variables for XenoShop Analytics backend
# Copy this to `.env` and fill in real values. Do NOT commit real secrets.

# Server
PORT=3000
NODE_ENV=development
FRONTEND_ORIGIN=http://localhost:5173

# Database (Postgres example)
# e.g. postgresql://user:password@host:5432/dbname?schema=public
DATABASE_URL=

# Cookie / session
COOKIE_SECRET=
COOKIE_SECURE=false

# Prisma / encryption
DATA_ENCRYPTION_KEY=

# SMTP (Mailtrap for dev/staging; use SendGrid/SES in production)
SMTP_HOST=
SMTP_PORT=2525
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# OTP debug flag (set true in dev/staging only if team needs to view OTPs)
SHOW_DEV_OTPS=false

# Shopify / webhooks / tenants
SHOPIFY_WEBHOOK_SECRET=
BASE_WEBHOOK_URL=
TENANT_NAME=

# Any other secrets the app uses (replace names as appropriate)
ACCESS_TOKEN=
API_SECRET=
